sudo systemctl start mongod




import com.mongodb.client.*;
import org.bson.Document;

public class MongoConnect {
    public static void main(String[] args) {
        try {
            // 1Ô∏è‚É£ Connect to MongoDB server (localhost, default port 27017)
            MongoClient client = MongoClients.create("mongodb://localhost:27017");
            System.out.println("‚úÖ Connected to MongoDB successfully!");

            // 2Ô∏è‚É£ Create or access the database
            MongoDatabase db = client.getDatabase("Institute");
            System.out.println("‚úÖ Database created: Institute");

            // 3Ô∏è‚É£ Create or access the collection
            MongoCollection<Document> collection = db.getCollection("Students");
            System.out.println("‚úÖ Collection created: Students");

            // 4Ô∏è‚É£ Insert Documents
            collection.insertOne(new Document("RollNo", 1)
                                 .append("Name", "Amit")
                                 .append("Age", 18)
                                 .append("Branch", "CS"));
            collection.insertOne(new Document("RollNo", 2)
                                 .append("Name", "Ravi")
                                 .append("Age", 19)
                                 .append("Branch", "IT"));
            System.out.println("‚úÖ Documents inserted.");

            // 5Ô∏è‚É£ Display Data
            System.out.println("\nüìò Students Data:");
            for (Document doc : collection.find()) {
                System.out.println(doc.toJson());
            }

            // 6Ô∏è‚É£ Update a Document
            collection.updateOne(new Document("RollNo", 1),
                                 new Document("$set", new Document("Branch", "AIML")));
            System.out.println("‚úÖ Document updated (RollNo 1 ‚Üí AIML).");

            // 7Ô∏è‚É£ Remove a Document
            collection.deleteOne(new Document("RollNo", 2));
            System.out.println("‚úÖ Document deleted (RollNo 2).");

            // 8Ô∏è‚É£ Display Remaining Data
            System.out.println("\nüìò Updated Students Data:");
            for (Document doc : collection.find()) {
                System.out.println(doc.toJson());
            }

            // Close connection
            client.close();
            System.out.println("\n‚úÖ Connection closed.");

        } catch (Exception e) {
            System.out.println("‚ùå Error: " + e.getMessage());
        }
    }
}
